@{
    var rootPathPrefix = ViewData["RootPathPrefix"];
    var apiUrl = ViewData["ApiUrl"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--  scripts -->
    <script type="text/javascript" src="@rootPathPrefix/lib/jquery/js/jquery.js"></script>
    <!-- css -->
    <link rel="stylesheet" href="@rootPathPrefix/lib/bulma/css/bulma.css" />

    <title>Show Reminder</title>
</head>
<body>
    @Html.Hidden("rootPathPrefix", rootPathPrefix)
    @Html.Hidden("apiUrl", apiUrl)

    <!-- the body of the page -->
    <div class="container">
        @RenderBody()
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
